import random

def guess(x):
    random_number = random.randint(1, x)
    guess = 0
    while guess != random_number:
        guess = int(input(f'Guess a number, between 1 and {x}: '))
        if guess < random_number:
            print('Sorry chief, too low. Guess again!')
        elif guess > random_number:
            print('Sorry boss, guess too high. Might try again!')
        
    print(f'Poggers, you have guessed the number {random_number} correctly!')
        
        
        
            
guess(25)



